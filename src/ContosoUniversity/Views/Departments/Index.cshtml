@using ContosoUniversity.ViewModels.Departments
@model IEnumerable<ContosoUniversity.ViewModels.Departments.DepartmentListItemViewModel>

@{
    ViewData["Title"] = "Departments";
}

<h1>Departments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Budget)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Administrator)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (DepartmentListItemViewModel item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(_ => item.Name)
            </td>
            <td>
                @Html.DisplayFor(_ => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(_ => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(_ => item.Administrator)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExternalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExternalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExternalId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>