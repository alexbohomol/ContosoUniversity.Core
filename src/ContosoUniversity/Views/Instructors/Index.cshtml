@using ContosoUniversity.ViewModels.Instructors
@model ContosoUniversity.ViewModels.Instructors.InstructorIndexViewModel

@{
    ViewData["Title"] = "Instructors";
}

<h2>Instructors</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>Hire Date</th>
        <th>Office</th>
        <th>Courses</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (InstructorListItemViewModel item in Model.Instructors)
    {
        <tr class="@item.RowClass">
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office)
            </td>
            <td>
                @foreach (string course in item.AssignedCourses)
                {
                    @course<br/>
                }
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@if (Model.Courses != null)
{
    <h3>Courses Taught by Selected Instructor</h3>
    <table class="table">
        <tr>
            <th></th>
            <th>Number</th>
            <th>Title</th>
            <th>Department</th>
        </tr>

        @foreach (CourseListItemViewModel item in Model.Courses)
        {
            <tr class="@item.RowClass">
                <td>
                    @Html.ActionLink("Select", "Index", new { courseExternalId = item.Id })
                </td>
                <td>
                    @item.CourseCode
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Department
                </td>
            </tr>
        }

    </table>
}

@if (Model.Students != null)
{
    <h3>
        Students Enrolled in Selected Course
    </h3>
    <table class="table">
        <tr>
            <th>Name</th>
            <th>Grade</th>
        </tr>
        @foreach (EnrolledStudentViewModel item in Model.Students)
        {
            <tr>
                <td>
                    @item.StudentFullName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnrollmentGrade)
                </td>
            </tr>
        }
    </table>
}