@model ContosoUniversity.Mvc.ViewModels.Students.EditStudentForm

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Request.ExternalId"/>
            <div class="form-group">
                <label asp-for="Request.LastName" class="control-label"></label>
                <input asp-for="Request.LastName" class="form-control"/>
                <span asp-validation-for="Request.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.FirstName" class="control-label"></label>
                <input asp-for="Request.FirstName" class="form-control"/>
                <span asp-validation-for="Request.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Request.EnrollmentDate" class="control-label">Enrollment Date</label>
                <input asp-for="Request.EnrollmentDate" type="date" class="form-control"/>
                <span asp-validation-for="Request.EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
